<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_thumbnail_pic_s"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_thumbnail_pic_s"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#FFF"
        android:text="5454"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_thumbnail_pic_s"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail_pic_s"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail_pic_s" />
</android.support.constraint.ConstraintLayout>
